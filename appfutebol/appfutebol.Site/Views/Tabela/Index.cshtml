@model IEnumerable<appfutebol.Dominio.Tabela>

@{
    ViewBag.Title = "Index";
}
<div><h2 class="center"><strong>TABELA DE CLASSIFICAÇÃO</strong></h2></div>



<table id="tblTabela" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Clube")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pontos)
            </th>
            <th>
                @Html.DisplayName("GF")
            </th>
            <th>
                @Html.DisplayName("GS")
            </th>
          
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Clube.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pontos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GolFeito)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GolSofrido)
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts{
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/DataTables/dataTables.bootstrap.min.js"></script>
    <link href="~/Content/DataTables/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <script>
        $(document).ready(function () {
            $('#tblTabela').DataTable();
        });
    </script>
}